{
    "name": "spatie/global-ray",
    "description": "Install Ray globally",
    "keywords": [
        "spatie",
        "global-ray"
    ],
    "homepage": "https://github.com/spatie/global-ray",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Bauman",
            "email": "info@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "titasgailius/terminal": "^1.1",
        "symfony/console": "^4.0|^5.0|^6.0",
        "symfony/process": "^4.2|^5.0|^6.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.20"
    },
    "bin": [
        "bin/ray"
    ],
    "autoload": {
        "psr-4": {
            "Spatie\\GlobalRay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\GlobalRay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "build": [
            "cd generator;composer install",
            "generator/vendor/bin/box compile"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
